#unique ID for each person
final.pid <- final %>% 
  mutate(PID = (ER30001 * 1000) + ER30002) %>%
  relocate(PID) #putting at beginning of dataset

#checking for duplicates by PID
sum(duplicated(final.pid$PID)) #should return 0

final=final.pid
